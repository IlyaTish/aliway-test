/* Common styles */

html
  height 100%

body
  height 100%
  min-height 100vh
  margin 0
  color dark
  font-size 16px
  font-family 'Raleway', Helvetica, Arial, sans-serif
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  background #FFFFFF
  overflow-x hidden
  overflow-y scroll

img
  max-width 100%
  display block

figure
  margin 0

.container
  max-width 1096px
  margin 0 auto
  padding 0 20px
  box-sizing border-box

  @media (max-width 767px)
    padding 0 16px

  @media (max-width 479px)
    padding 0 10px

.wrapper
  min-height 100%
  margin 0 auto
  display flex
  flex-direction column

.content
  flex 1 0 auto
  position relative
